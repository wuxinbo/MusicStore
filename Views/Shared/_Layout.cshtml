<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-1.7.1.min.js")
    @Scripts.Render("~/Scripts/Musicstore.js")
    @Scripts.Render("~/Scripts/jquery.cookie.js")
    @Scripts.Render("~/Scripts/json2.js")
</head>
<body>
    <div id="header">

        <div id="login">

            @{
                
                MusicStore.Models.User user = null;

                user = (MusicStore.Models.User)Session["User"];
                if (user != null)
                {
                    String username = user.UserName;
                     
                <span>@Html.ActionLink(username, "LogOn", "account")</span>@:或
                <span>
                    @Html.ActionLink("退出", "register", "account")</span>
                }
                else
                {
                <span>@Html.ActionLink("登录", "LogOn", "account")</span>@:或
                <span>
                    @Html.ActionLink("注册", "register", "account")</span>
                }
           
            }
        </div>

    </div>
    <div id="header_search">
        <a href="@Url.Content("/home")">
            <img src="~/Content/Images/logo.png" />

        </a>

        <div id="search">
            <input class="search" />
            <input id="search_buttton" type="button" value="搜索" />
        </div>
        <div id="shopping_cart">
                        <span id="p_counts">0
            </span>
            <dl>

                <dt class="ld">
                    <a href="@Url.Content("/shoppingcart")">购物车</a></dt>
                @{
                    if (Request.Cookies["albums"] != null)
                    {
                        //Newtonsoft.Json.Linq.JObject ob1 = 
                        //    Newtonsoft.Json.Linq.JObject.Parse(Request.Cookies["albums"].Value);
                        Console.Write(Request.Cookies["albums"].ToString());
                       
                    <dd id="subbox">

                        <div class="smt">
                            <div class="smc">
                                <span class="f1">最新加入的商品
                                
                                <input type="hidden" id="p_length" />
                                </span>
                                <script>
                                    $('p_length')

                                </script>
                            </div>
                            @for (int i = 0; i < 3; i++)
                            {

                           
                                <ul id="cart_album"class="item_info@("_" + i)">

                                    <li>
                                        <div id="p-img">

                                            <a>
                                                <img id="cart_img" src="/Content/Images/placeholder.gif" />
                                            </a>
                                        </div>
                                        <div id="cart_title">
                                            <span>mozhake
                                            </span>
                                        </div>
                                        <div id="cart_price">

                                            <span id="item_price" class="price">0.00
                                            </span>
                                            X
                                        <span id="cart_count">1
                                        </span>
                                            <br />
                                            <a onclick="delete_item(@(i))">删除
                                            </a>
                                        </div>

                                    </li>
                                </ul>
                            }
                            <div class="smb">
                                共<span id="counts">1</span>件商品，总价
                           
                            <span id="total" class="price">10
                            </span>
                                <br />
                                <a id="payfor">去结算商品 </a>
                            </div>
                        </div>

                    </dd>
                    }
                    else
                    {
                    <dd id="subbox">
                        <b></b>
                        <span>购物车里面没有商品
                        </span>
                    </dd>
                    }
                }

            </dl>
        </div>
    </div>
    <div id="nav">
        <ul>
            <li>@Html.ActionLink("首页", "index", "home")</li>
            <li>@Html.ActionLink("商店管理", "index", "storemannager")
            </li>
            <li>@Html.ActionLink("专辑分类", "index", "store")</li>
        </ul>

    </div>
    @RenderBody()

    <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.js" type="text/javascript"></script>
    <link href="~/Scripts/jquery-ui-1.11.0/jquery-ui.css" rel="stylesheet" type="text/css" />
    <script>
        $(function () {
            $('#shopping_cart').mouseover(function () {
                $('#subbox').show();

            });
            $('#shopping_cart').mouseleave(function () {
                $('#subbox').hide();

            });
            parse_json_cart();


        });

    </script>
</body>
</html>
